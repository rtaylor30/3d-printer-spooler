<div class="login-form">
  <h2>Sign In</h2>
  
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <%= hidden_field_tag 'alt_path', registration_path(resource_name) %>
    <div><%= f.label :email %><br />
    <%= f.email_field :email, :autofocus => true %></div>
  
    <div>
      <%= f.label :password %><br />
      <%= f.password_field :password %>
    </div>
    <div class="verify-password">
      <%= f.label :password_confirmation, 'Verify Password' %><br />
      <%= f.password_field :password_confirmation %>
    </div>
  
    <div class='account-actions'>
      <input id="new-account" type="button" value="New Account"></input>
      <%= f.submit "Sign in", id: 'sign-in' %>
    </div>
  <% end %>
  
  <%= link_to "Forgot your password?", new_password_path(resource_name), id: 'forgot' %><br />
</div>
